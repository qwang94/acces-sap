{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Facture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Désignation</th>
                <td>{{ invoice.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ invoice.description }}</td>
            </tr>
            <tr>
                <th>Prix Ht</th>
                <td>{{ invoice.htAmount }}</td>
            </tr>
            <tr>
                <th>Prix TTC</th>
                <td>{{ invoice.ttcAmount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('home') }}" class="btn btn-primary">Retour à l'accueil</a>

    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
